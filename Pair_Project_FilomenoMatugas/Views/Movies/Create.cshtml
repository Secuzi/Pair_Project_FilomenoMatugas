@model Pair_Project_FilomenoMatugas.Models.Movie

@{
    ViewData["Title"] = "Create Movie";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <div class="card glass-card shadow-lg border-0 p-4">
                <h2 class="text-light fw-bold mb-3 text-center">🎬 Add New Movie</h2>
                <hr class="border-secondary">

                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <!-- Movie ID -->
                    <div class="mb-3">
                        <label asp-for="MovieId" class="form-label text-light"></label>
                        <input asp-for="MovieId" class="form-control bg-dark text-light border-light" placeholder="Enter Movie ID" />
                        <span asp-validation-for="MovieId" class="text-danger"></span>
                    </div>

                    <!-- Title -->
                    <div class="mb-3">
                        <label asp-for="Title" class="form-label text-light"></label>
                        <input asp-for="Title" class="form-control bg-dark text-light border-light" placeholder="Enter Title" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                    <!-- Genre -->
                    <div class="mb-3">
                        <label asp-for="Genre" class="form-label text-light"></label>
                        <input asp-for="Genre" class="form-control bg-dark text-light border-light" placeholder="Enter Genre" />
                        <span asp-validation-for="Genre" class="text-danger"></span>
                    </div>

                    <!-- Released -->
                    <div class="mb-3">
                        <label asp-for="Released" class="form-label text-light"></label>
                        <input asp-for="Released" type="date" class="form-control bg-dark text-light border-light" />
                        <span asp-validation-for="Released" class="text-danger"></span>
                    </div>

                    <!-- Poster URL -->
                    <div class="mb-3">
                        <label asp-for="Poster" class="form-label text-light"></label>
                        <input asp-for="Poster" class="form-control bg-dark text-light border-light" placeholder="Enter Poster URL" />
                        <span asp-validation-for="Poster" class="text-danger"></span>
                    </div>

                    <!-- Country -->
                    <div class="mb-3">
                        <label asp-for="Country" class="form-label text-light"></label>
                        <select asp-for="CountryId" asp-items="ViewBag.Country" class="form-select bg-dark text-light border-light"></select>
                        <span asp-validation-for="CountryId" class="text-danger"></span>
                    </div>

                    <!-- Plot -->
                    <div class="mb-3">
                        <label asp-for="Plot" class="form-label text-light"></label>
                        <textarea asp-for="Plot" class="form-control bg-dark text-light border-light" rows="3" placeholder="Enter Plot"></textarea>
                        <span asp-validation-for="Plot" class="text-danger"></span>
                    </div>

                    <!-- Rating -->
                    <div class="mb-3">
                        <label asp-for="Rating" class="form-label text-light"></label>
                        <input asp-for="Rating" type="number" step="0.1" class="form-control bg-dark text-light border-light" placeholder="Enter Rating" />
                        <span asp-validation-for="Rating" class="text-danger"></span>
                    </div>

                    <!-- Votes -->
                    <div class="mb-3">
                        <label asp-for="Votes" class="form-label text-light"></label>
                        <input asp-for="Votes" type="number" class="form-control bg-dark text-light border-light" placeholder="Enter Votes" />
                        <span asp-validation-for="Votes" class="text-danger"></span>
                    </div>

                    <!-- Submit Button -->
                    <div class="d-grid">
                        <button type="submit" class="btn btn-warning text-dark fw-bold btn-glow py-2">Create Movie</button>
                    </div>
                </form>

                <div class="text-center mt-3">
                    <a asp-action="Index" class="text-secondary text-decoration-none hover-white">← Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
